!!! XML
!!! 1.1
%html{"xml:lang" => "ja", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title== Bu#{@subtitle}
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=480" />

  %body
    .content
      .topmenu
        %table{:width => '100%'}
          %tr
            %td
              = link_to 'Home', root_path
              - if current_user
                = link_to 'My page', my_path
              = link_to 'About', about_path
            %td.right
              - if current_user
                = link_to 'Settings', edit_my_path
                = link_to "Sign out(#{current_user.name})", logout_path
              - else
                = link_to 'Sign in with twitter', '/auth/twitter'
      - if current_user and !current_user.mail?
        .input_mail
          %p.bold= link_to 'Please input your mail address', edit_my_path
      %div{:class => controller_name}
        = yield
      .footer
        %p
          bu:
          = link_to '@dan5ya', 'http://twitter.com/dan5ya'
